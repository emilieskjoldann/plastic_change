---
import Button from '../components/Button.astro';
---

<form class="bg-white bg-opacity-80 rounded-2xl p-3 max-w-sm m-10">
  <h3 class="font-['Futura'] font-medium text-2xl text-[#FF0000]">Støt os</h3>
  <div class="grid grid-cols-4">
    <span class=" text-[#FF0000] col-span-4 pt-2">Betalingsform:</span>
    <div class="col-span-2">
      <input class="bg-white bg-opacity-10 border-[#1A4468] " type="radio" id="mobilp" name="betaling" />
      <label class="text-xs text-[#1A4468]" for="mobilp"> Mobilpay</label>
    </div>
    <div class="col-span-2">
        <input class="bg-white bg-opacity-10 border-[#1A4468] " type="radio" id="kort" name="betaling" />
        <label class="text-xs text-[#1A4468]" for="kort">Betalingskort</label><br />
    </div>
</div>
<div class="grid grid-cols-3 py-4">
    <span class="text-[#FF0000] col-span-3">Beløb:</span>
    <div class="">
    <input class="bg-white bg-opacity-10 border-[#1A4468] " type="radio" id="engang" name="beløb" />
    <label class="text-xs text-[#1A4468]" for="engsng">En gang</label>
</div>
<div class="py-0">
    <input class="bg-white bg-opacity-10 border-[#1A4468] " type="radio" id="månedlig" name="beløb" />
    <label class="text-xs text-[#1A4468]" for="månedlig">Månedligt</label>
</div>
<div class="py-0">
    <input class="bg-white bg-opacity-10 border-[#1A4468] " type="radio" id="medlem" name="beløb" />
    <label class="text-xs text-[#1A4468]" for="medlem">Medlem</label>
</div>
<div class="py-3">
    <label for="quantity"></label>
    <input class="bg-white bg-opacity-10 border-[#1A4468] rounded-2xl h-8" placeholder="beløb" type="number" id="quantity" name="quantity" />
</div>
</div>
  <div class="grid grid-cols-2 gap-5">
    <div>
      <label class="text-[#FF0000] py-5" for="fname">Fornavn:</label>
      <input class="bg-white bg-opacity-10 border-[#1A4468] rounded-2xl w-32 h-8" type="text" id="fname" /><br />
    </div>
    <div>
      <label class="text-[#FF0000]" for="ename">Efternavn:</label>
      <input class="bg-white bg-opacity-10 border-[#1A4468] rounded-2xl w-32 h-8" type="text" id="ename" /><br />
    </div>
    <div>
      <label class="text-[#FF0000]" for="mail">E-mail:</label>
      <input class="bg-white bg-opacity-10 border-[#1A4468] rounded-2xl w-32 h-8" type="text" id="mail" />
    </div>
    <div>
      <label class="text-[#FF0000]" for="tlf">Telefon:</label>
      <input class="bg-white bg-opacity-10 border-[#1A4468] rounded-2xl w-32 h-8" type="text" id="tlf" />
    </div>
  </div>
  <div class="mt-5 flex justify-center">
  <Button size="large">Støt nu</Button>
  </div>
</form>
